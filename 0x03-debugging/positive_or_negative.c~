#include <stdlib.h>
#include <stdio.h>
#include <time.h>
/**
* positive_ornegative
*
* Return: Always 0 (Success)
*/
void positive_or_negative(int i)
{
int n;
srand(time(0));
n = rand() - RAND_MAX / 2;
if (n > 0)
printf("%d is positive\n", n);
else if (n < 0)
printf("%i is negative\n", n);
else
printf("%i is zero\n", n);
}
